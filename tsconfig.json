{
    "compilerOptions": {
      "target": "esnext",
      "module": "commonjs",
      "sourceMap": true,
      // "declaration": true,
      "allowJs": true,
      "outDir": "dist",
      "strict": true,
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "baseUrl": "./",
      "paths": {
        "@t/*": ["./@Types/*"],
        "@script/*": ["./Scripts/*"],
        "@app/*": ["./App/*"]
      },
      "jsx": "react"
    },
    "include": [
      "./**/*.ts",
      "./**/*.tsx",
      "./**/*.d.ts",
      "./**/*.js"
    ]
}